/* https://www.typescriptlang.org/tsconfig/ */
{
	"compilerOptions": {
		/* Language and Environment */
		"target": "ESNext",
		"jsx": "react-jsx",
		
		/* Modules */
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["vite/client", "vite-plugin-svgr/client", "node"],
		"allowUmdGlobalAccess": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"prozilla-os": ["packages/prozilla-os/dist/main", "packages/prozilla-os/src/main"],
			"@prozilla-os/*": ["packages/*/dist/main", "packages/*/src/main", "packages/apps/*/dist/main", "packages/apps/*/src/main"],
		},
		
		/* JavaScript Support */
		"allowJs": true,
		"checkJs": true,
		
		/* Emit */
		"noEmit": true,
		"noEmitOnError": true,
		
		/* Interop Constraints */
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		
		/* Type Checking */
		"strict": true,
		"noImplicitOverride": false // TO DO: Slowly apply to all packages, then enable globally
	},
	"include": [
		"packages/**/*",
		"scripts/**/*",
		"demo/**/*",
		"docs/**/*", 
		"examples/**/*", 
	],
	"exclude": [
		"**/node_modules/**/*",
		"**/dist/**/*",
		"./.vscode",
		"./.github",
	],
}